<style>
  body {
    background-color: {{col}};
  }
</style>

{{#if name}}
<h2>{{name}}: {{comp}}</h2>
{{else}}
<h2>{{comp}}</h2>
{{/if}}

<h1>New Compliment</h1>
<form action="/" method="post">
  <label for="new_compliment">Enter a new compliment</label>
  <input id="new_compliment" type="text" name="new_compliment">
  <input type="submit">
</form>
